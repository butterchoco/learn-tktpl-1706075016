<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorSecondary"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="Selamat Datang di Jahit.co.id"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Sebagai apa kamu di Jahit.co.id ?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:backgroundTint="#fff"
            android:layout_margin="16px"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="32px">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="32px"
                android:layout_marginTop="10sp"
                android:src="@drawable/customer" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Pelanggan yang ingin mengajukan proyek jahit"
                android:textAlignment="center"
                android:textColor="#000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:backgroundTint="#fff"
            android:layout_margin="16px">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="32px">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="32px"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/partner" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    android:text="Vendor penjahit yang ingin menjadi mitra Jahit.co.id"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="140px"
            android:layout_height="170px"
            android:layout_gravity="center"
            app:icon="@drawable/abc_vector_test"
            android:rotation="180"
            app:iconPadding="@dimen/cardview_default_radius"
            android:gravity="center"
            app:iconGravity="textStart"
            app:iconTint="#fff"
            android:textColor="#fff"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="40sp"
            android:layout_marginTop="100sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>